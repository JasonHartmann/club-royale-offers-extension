{
  "manifest_version": 3,
  "name": "Club Royale and Blue Chip Casino Offers Viewer",
  "version": "1.2",
  "description": "View Royal Caribbean & Celebrity casino offers in a sortable, groupable table and accordion.",
  "content_scripts": [
    {
      "matches": [
        "https://*.royalcaribbean.com/club-royale/*",
        "https://*.celebritycruises.com/blue-chip-club/*"
      ],
      "js": [
        "domUtils.js",
        "styles.js",
        "buttonManager.js",
        "errorHandler.js",
        "apiClient.js",
        "spinner.js",
        "modal.js",
        "tableBuilder.js",
        "accordionBuilder.js",
        "sortUtils.js",
        "tableRenderer.js",
        "utils.js",
        "offerCodeLookup.js",
        "offerNamePdfLinker.js",
        "app.js"
      ],
      "run_at": "document_start"
    }
  ]
}