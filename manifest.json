{
  "manifest_version": 3,
  "name": "Club Royale Casino Offers Viewer",
  "version": "1.0",
  "description": "Adds a 'Show Casino Offers' button to Royal Caribbean Club Royale Offers page, presenting a sortable, groupable table and accordion view of casino offers",
  "content_scripts": [
    {
      "matches": ["https://www.royalcaribbean.com/club-royale/offers*"],
      "js": [
        "domUtils.js",
        "styles.js",
        "buttonManager.js",
        "errorHandler.js",
        "apiClient.js",
        "spinner.js",
        "modal.js",
        "tableBuilder.js",
        "accordionBuilder.js",
        "sortUtils.js",
        "tableRenderer.js",
        "utils.js",
        "app.js"
      ],
      "run_at": "document_start"
    }
  ]
}